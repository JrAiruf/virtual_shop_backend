datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model HomeImages {
  id       Int    @id @default(autoincrement())
  url      String @unique
  position Int
  xAxis    Int
  yAxis    Int
}

model AppProducts {
  productid   String         @id @default(uuid())
  title       String
  price       Decimal
  description String
  images      String[]
  productSize String[]
  category    AppCategories? @relation(fields: [cid], references: [categoryid])
  cid  String?
}

model AppCategories {
  categoryid String        @id @default(uuid())
  title      String
  iconImage  String
  products   AppProducts[]
}
