datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model HomeImages {
  id       Int    @id @default(autoincrement())
  url      String @unique
  position Int
  xAxis    Int
  yAxis    Int
}

model AppCategories {
  cat_id         String           @id @default(uuid())
  title          String
  iconImage      String
  AppCatProducts AppCatProducts[]

  @@map("AppCategories")
}

model AppProducts {
  prod_id        String           @id @default(uuid())
  title          String
  price          Decimal
  info           String?          @unique
  AppCatProducts AppCatProducts[]

  @@map("AppProducts")
}

model AppCatProducts {
  id       String        @id @default(uuid())
  p_id     String
  products AppProducts   @relation(fields: [p_id], references: [prod_id])
  c_id     String
  category AppCategories @relation(fields: [c_id], references: [cat_id])
}