datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model HomeImages {
  id       Int    @id @default(autoincrement())
  url      String @unique
  position Int
  xAxis    Int
  yAxis    Int
}

model AppProducts {
  productid     String         @id @default(uuid())
  title         String
  price         Int
  description   String
  images        String[]
  cid           String?
  size          String[]
  AppCategories AppCategories? @relation(fields: [cid], references: [categoryid])
}

model AppCategories {
  categoryid  String        @id @default(uuid())
  title       String
  iconimage   String
  products    String[]      @db.VarChar
  AppProducts AppProducts[]
}
